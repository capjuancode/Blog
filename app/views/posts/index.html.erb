<h1 id="page_title">Información de Interés</h1>

  <div id="posts_wrapper" class="skinny_wrapper">

    <% @posts.each do |post| %>
      <div class="post">
        <p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
        <h2><a href="#"><%= link_to post.title, post %></a></h2>
        <hr>
      </div>
    <% end %>

    <div class="pagination">
      <span class="previous_page disabled">&larr; previous</span>
      <em class="current">1</em>
      <a href="#" rel="next">2</a>
      <a href="#" class="next_page">Next &rarr;</a>
    </div>
  </div>
